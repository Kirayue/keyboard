  body
    button(data-theme='b')#stop Stop
    button(data-theme='b')#restart Restart
    div(data-role='navbar')
        ul
            li 
                button.ui-btn#random Random
            li 
                button.ui-btn#center Center
        ul
            li 
                button.ui-btn#tr TR
            li 
                button.ui-btn#tl TL
            li 
                button.ui-btn#br BR
            li 
                button.ui-btn#bl BL
    #timer
    #keyboard
     .row
      each key in ['q','w','e','r','t','y','u','i','o','p']
        .key(id=key) 
            .text
     .row 
      each key in ['a','s','d','f','g','h','j','k','l']
        .key(id=key)
            .text
     .row 
      each key in ['z','x','c','v','b','n','m']
        .key(id=key) 
            .text
     .row: .key#space
     script(src='app2.js')
